endif # WITH_MON


if WITH_OSD

ceph_sbin_SCRIPTS += \
	ceph-disk-udev

bin_SCRIPTS += \
	ceph-clsinfo

ceph_osd_SOURCES = ceph_osd.cc
ceph_osd_LDADD = \
	$(LIBOSDC) $(LIBOSD) $(LIBOSD_TYPES) $(LIBOS_TYPES) \
	$(LIBOS) \
	$(CEPH_GLOBAL) $(LIBCOMMON)

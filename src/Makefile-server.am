ceph_osd_LDADD += $(LIBOSD_TP)
endif
bin_PROGRAMS += ceph-osd

endif # WITH_OSD


if WITH_MDS

ceph_mds_SOURCES = ceph_mds.cc
ceph_mds_LDADD = $(LIBMDS) $(LIBOSDC) $(CEPH_GLOBAL) $(LIBCOMMON)
bin_PROGRAMS += ceph-mds

endif # WITH_MDS


